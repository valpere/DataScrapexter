# .editorconfig
# EditorConfig helps maintain consistent coding styles across different editors and IDEs
# https://editorconfig.org

# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Go source files
[*.go]
indent_style = tab
indent_size = 4
max_line_length = 120

# Go module files
[go.{mod,sum}]
indent_style = tab
indent_size = 4

# YAML configuration files
[*.{yaml,yml}]
indent_style = space
indent_size = 2
quote_type = double

# JSON files
[*.json]
indent_style = space
indent_size = 2
insert_final_newline = false

# Markdown documentation
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
max_line_length = 80

# Shell scripts
[*.{sh,bash}]
indent_style = space
indent_size = 4
shell_variant = bash

# Perl scripts
[*.{pl,pm}]
indent_style = space
indent_size = 4
max_line_length = 100

# Dockerfile
[{Dockerfile,Dockerfile.*}]
indent_style = space
indent_size = 4

# Docker Compose files
[docker-compose.{yml,yaml}]
indent_style = space
indent_size = 2

# Makefile
[{Makefile,makefile,GNUmakefile}]
indent_style = tab
indent_size = 4

# Protocol Buffers
[*.proto]
indent_style = space
indent_size = 2

# HTML templates
[*.{html,htm}]
indent_style = space
indent_size = 2
max_line_length = 120

# CSS/SCSS files
[*.{css,scss,sass}]
indent_style = space
indent_size = 2

# JavaScript/TypeScript files
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2
quote_type = single
max_line_length = 100

# XML files
[*.xml]
indent_style = space
indent_size = 2

# Configuration files
[*.{ini,toml,conf}]
indent_style = space
indent_size = 4

# Git files
[{.gitignore,.gitattributes,.gitmodules}]
indent_style = space
indent_size = 4

# GitHub Actions
[.github/workflows/*.{yml,yaml}]
indent_style = space
indent_size = 2

# Environment files
[.env*]
indent_style = space
indent_size = 4
insert_final_newline = false

# SQL files
[*.sql]
indent_style = space
indent_size = 2
uppercase_keywords = true

# Ruby files (for potential scripts)
[*.rb]
indent_style = space
indent_size = 2

# Python files (for potential scripts)
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88  # Black formatter default

# Ignore files that shouldn't be modified
[{vendor/**,node_modules/**,.git/**}]
indent_style = unset
indent_size = unset
end_of_line = unset
trim_trailing_whitespace = unset
charset = unset
insert_final_newline = unset
